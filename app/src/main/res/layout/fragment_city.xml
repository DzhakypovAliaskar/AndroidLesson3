<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.CityFragment">

   <EditText
       android:id="@+id/poisk"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       app:layout_constraintTop_toTopOf="parent"
       android:text="gggggggg"
       android:textColor="@color/black"
       android:textSize="20dp"
       android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_poisk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/poisk"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="50dp"
        android:text="Поиск"/>

    <Button
        android:id="@+id/btn_poisk_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_poisk"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="50dp"
        android:text="Map"/>

</androidx.constraintlayout.widget.ConstraintLayout>